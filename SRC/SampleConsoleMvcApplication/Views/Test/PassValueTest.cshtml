@using HiLand.Utility4.MVC.Data;
@model int
@{
    ViewBag.Title = "PassValueTest";
    string myValue = this.GetPassedParam<int>("myParam");
    //this.ViewContext.Controller.
}

<h2>PassValueTest</h2>
@myValue



<script type='text/javascript'>
    $(document).ready(function () {
        $('#myTextBox').autocomplete({
            minLength: 2,
            source: function (request, response) {
                $.ajax({
                    url: '/SampleConsoleMvcApplication/test/AutocompleteData',
                    dataType: 'json',
                    data: request,
                    success: function (data) {
                        response(data);
                    }
                });
            },
            select: function (event, ui) {
                try {
                    if (typeof eval('autoCompleteSelectedCallback') == 'function') {
                        eval('autoCompleteSelectedCallback')(ui.item);
                    }
                } catch (e) {
                    //do nothing;
                }
            }
        });
    });
</script>


